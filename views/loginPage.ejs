<body>
    <div role="contentinfo" id="login">
        <h1 class="text-center text-white pt-5" style="background-color: #044347;font-size: 30">IReader</h1>
          <p style="text-align: center;font-size: 1.75rem;color:#044347; margin: auto; font-style: bold;">Manage your Readings</p>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <!-- <form id="login-form" class="form" action="" method="post"> -->
                            <h3 class="text-center text-info" style="color:#044347">Login</h3>
                            <form action="auth_login" method="POST">

                            <div role="textbox"class="form-group">
                                <label for="username" class="text-info" style="color:#044347">E-mail adress:</label><br>
                                <input aria-label="adress" type="text" name="email" id="email" class="form-control">
                            </div>

                            <div role="textbox" class="form-group">
                                <label for="password" class="text-info" style="color:#044347">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control">
                            </div>

                            <div role="button" class="form-group">
                                <!-- <label for="remember-me" class="text-info"><span>Remember me</span>Â <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br> -->
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Submit">
                            </div>
                            </form> 
                        </br>
                            <div role="button" id="register-link" class="text-right">
                                <a href="/register" class="text-info">Not registered?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
