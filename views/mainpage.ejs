<span class="accessible-hidden"> Search </span>
</button> </p>
</form>

<div class="container">
	<div class="row">
		<div class="span5">
            <table class="table-responsive" class="table table-striped table-condensed">
                <thead>
                    <tr class= "colonnes">
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Année de publication</th>
                        <th>Nombre de pages</th>   
                        <th>
                          <form action = "/Alire" method="GET"> 
                            <button class="btn2" type="submit" class= "btn-sm btn-primary btn-create">A lire</button>
                          </form>
                          <form action = "/EnCours" method="GET">
                            <button class="btn2" type="submit" class="btn btn-sm btn-primary btn-create">En cours</button>
                          </form>
                          <form action = "/Finis" method="GET">
                            <button class="btn2" type="submit" class="btn btn-sm btn-primary btn-create">Lu</button>
                          </form>

                      </th> 
                        <th> Paramètres</th>                               
                    </tr>
                </thead>  
                <% for (let i=0; i < reading.length; i++) { %>    
               
              <tbody>
                <tr>
                    <td data-label="Titre"><%= reading[i].Bookname %></td>
                    <td data-label="Auteur"><%= reading[i].Author %></td>
                    <td data-label="Publication"><%= reading[i].Publication %></td>
                    <td data-label="Pages"><%= reading[i].Pages %></td>
                    <td data-label="Statut"><button><span  class="label label-success" style="background-color:#083000"><%= reading[i].Statut %></span></button></td>
